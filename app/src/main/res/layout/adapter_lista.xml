<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="16dp"
        android:layout_width="360dp"
        android:layout_height="180dp"
        android:elevation="10dp"
        app:cardBackgroundColor="#CC101010"
        app:cardCornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_plant"
            android:layout_width="188dp"
            android:layout_height="188dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="-20dp"
            android:scaleType="center"
            app:srcCompat="@drawable/img_card" />

        <TextView
            android:id="@+id/namePlants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/balooda2_regular"
            android:text="Mya"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/plantType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/balooda2_regular"
            android:text="Plant type"
            android:textColor="@color/gray1" />

        <TextView
            android:id="@+id/plantDescription"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginTop="66dp"
            android:fontFamily="@font/balooda2_regular"
            android:lineHeight="14dp"
            android:text="Mya is a plant who likes sun\n and much water."
            android:textColor="@color/gray1" />

        <ImageView
            android:id="@+id/img_moister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="154dp"
            android:layout_marginTop="120dp"
            app:srcCompat="@drawable/ic_moiser" />


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>